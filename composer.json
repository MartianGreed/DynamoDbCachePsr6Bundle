{
  "name": "rikudou/psr6-dynamo-db-bundle",
  "type": "symfony-bundle",
  "description": "PSR-6 cache implementation using AWS DynamoDB for Symfony",
  "minimum-stability": "stable",
  "license": "MIT",
  "require": {
    "symfony/framework-bundle": "^5.0",
    "rikudou/psr6-dynamo-db": "^1.0",
    "php": "^7.2",
    "symfony/cache": "^5.0"
  },
  "autoload": {
    "psr-4": {
      "Rikudou\\DynamoDbCacheBundle\\": "src/"
    }
  },
  "require-dev": {
    "friendsofphp/php-cs-fixer": "^2.16",
    "phpstan/phpstan": "^0.12.44"
  },
  "scripts": {
    "fixer": "php-cs-fixer fix src --verbose",
    "phpstan": "phpstan analyse --level max src",
    "test": "composer fixer -- --dry-run && composer phpstan"
  }
}
